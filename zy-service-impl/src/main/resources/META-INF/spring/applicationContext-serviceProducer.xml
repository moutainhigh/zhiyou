<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://code.alibabatech.com/schema/dubbo http://static.1024ke.com/file/dubbo.xsd
		">
	<dubbo:application name="gc-provider" owner="gc"/>

	<!--采用快速失败的集群模式,即只进行一次调用 failfast -->
	<dubbo:provider cluster="failfast" timeout="10000"  filter="-exception,myException" loadbalance="roundrobin" />

	<dubbo:registry protocol="${dubbo.registry.protocol}" address="${dubbo.registry.address}" />
	<dubbo:protocol port="${gc-service-impl.dubbo.protocol.port}" threads="${gc-service-impl.dubbo.threads}"  />
	
	<dubbo:service ref="adminServiceImpl" interface="com.gc.service.AdminService" />
	<dubbo:service ref="areaServiceImpl" interface="com.gc.service.AreaService" />
	<dubbo:service ref="accountServiceImpl" interface="com.gc.service.AccountService" />
