	<dubbo:service ref="bannerServiceImpl" interface="com.gc.service.BannerService" />
	<dubbo:service ref="messageServiceImpl" interface="com.gc.service.MessageService" />
	<dubbo:service ref="noticeServiceImpl" interface="com.gc.service.NoticeService" />
	<dubbo:service ref="roleServiceImpl" interface="com.gc.service.RoleService" />
	<dubbo:service ref="shortMessageServiceImpl" interface="com.gc.service.ShortMessageService" />
	<dubbo:service ref="userServiceImpl" interface="com.gc.service.UserService" />
	<dubbo:service ref="articleServiceImpl" interface="com.gc.service.ArticleService" />
	<dubbo:service ref="articleCategoryServiceImpl" interface="com.gc.service.ArticleCategoryService" />
	<dubbo:service ref="depositServiceImpl" interface="com.gc.service.DepositService" />
	<dubbo:service ref="withdrawServiceImpl" interface="com.gc.service.WithdrawService" />
	<dubbo:service ref="orderServiceImpl" interface="com.gc.service.OrderService" />
	<dubbo:service ref="orderItemServiceImpl" interface="com.gc.service.OrderItemService" />
	<dubbo:service ref="productServiceImpl" interface="com.gc.service.ProductService" />
	<dubbo:service ref="giftServiceImpl" interface="com.gc.service.GiftService" />
