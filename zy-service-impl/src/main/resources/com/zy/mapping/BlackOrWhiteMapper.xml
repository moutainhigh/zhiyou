			<if test="startTimeLT != null">
				and start_time &lt; #{startTimeLT}
			</if>
			<if test="applyDeadlineLT != null">
				and apply_deadline &lt; #{applyDeadlineLT}
			</if>
			<if test="isReleasedEQ != null">
				and is_released = #{isReleasedEQ}
