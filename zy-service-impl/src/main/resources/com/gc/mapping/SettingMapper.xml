<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gc.mapper.SettingMapper" >

	<resultMap id="baseResultMap" type="com.gc.entity.sys.Setting">
		<id column="id" property="id" />
		<result column="sys_user_id" property="sysUserId" />
		<result column="fee_user_id" property="feeUserId" />
		<result column="grant_user_id" property="grantUserId" />
		<result column="withdraw_fee_rate_script" property="withdrawFeeRateScript" />
		<result column="is_dev" property="isDev" />
	</resultMap>

	<insert id="insert" parameterType="com.gc.entity.sys.Setting" useGeneratedKeys="true" keyProperty="id">
	  insert into `sys_setting` (sys_user_id,fee_user_id,grant_user_id,withdraw_fee_rate_script,is_dev)
	  values (#{sysUserId},#{feeUserId},#{grantUserId},#{withdrawFeeRateScript},#{isDev})
	</insert>

	<delete id="delete">
		delete from `sys_setting` where id = #{id}
	</delete>

	<update id="update" parameterType="com.gc.entity.sys.Setting">
		update `sys_setting`
		<set>
			sys_user_id = #{sysUserId},
			fee_user_id = #{feeUserId},
			grant_user_id = #{grantUserId},
			withdraw_fee_rate_script = #{withdrawFeeRateScript},
			is_dev = #{isDev},
		</set>
		where id = #{id}
	</update>

	<update id="merge">
		update `sys_setting`
			<set>
				<foreach collection="fields" item="field">
				<choose>
					<when test="field == 'sysUserId'">sys_user_id = #{setting.sysUserId},</when>
					<when test="field == 'feeUserId'">fee_user_id = #{setting.feeUserId},</when>
					<when test="field == 'grantUserId'">grant_user_id = #{setting.grantUserId},</when>
					<when test="field == 'withdrawFeeRateScript'">withdraw_fee_rate_script = #{setting.withdrawFeeRateScript},</when>
					<when test="field == 'isDev'">is_dev = #{setting.isDev},</when>
				</choose>
				</foreach>
			</set>
		where id = #{setting.id}
	</update>

	<select id="findOne" resultMap="baseResultMap" parameterType="long">
		select
		id,sys_user_id,fee_user_id,grant_user_id,withdraw_fee_rate_script,is_dev
		from `sys_setting`
		where id = #{id}
	</select>

	<select id="findAll" resultMap="baseResultMap">
		select
		id,sys_user_id,fee_user_id,grant_user_id,withdraw_fee_rate_script,is_dev
		from `sys_setting`
		order by id desc
	</select>

</mapper>